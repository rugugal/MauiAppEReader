<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.pages.LoginPage"
             Title="">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Войдите в аккаунт" TextColor="Black" FontSize="Large" HorizontalOptions="Center" />
        <Entry Text="{Binding Email}" TextColor="Black" Placeholder="Email" />
        <Entry Text="{Binding Password}" TextColor="Black" Placeholder="Пароль" IsPassword="True" />
        <Button Command="{Binding SignInCommand}" Text="Войти" HorizontalOptions="Fill" />
        <Button Command="{Binding NavigateSignUpCommand}" Text="Нет аккаунта? Зарегистрироваться"  HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>