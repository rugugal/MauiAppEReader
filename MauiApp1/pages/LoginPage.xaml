<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.pages.LoginPage"
             Title="LoginPage">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Login to Your Account" FontSize="Large" HorizontalOptions="Center" />
        <Entry Placeholder="Name" />
        <Entry Placeholder="Email" />
        <Entry Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" HorizontalOptions="Fill" />

        <Button Text="Back to Sign Up" Clicked="OnBackClicked" HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>