<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.pages.AddBookPage"
             Title="AddBookPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Upload an EPUB file" FontSize="Large" HorizontalOptions="Center"/>

        <Button Text="Select EPUB File" Clicked="OnSelectFileClicked"/>
        <Label x:Name="SelectedFileLabel" Text="No file selected" HorizontalOptions="Center" Margin="0,10"/>

        <Button Text="Add Book" Clicked="OnAddBookClicked" x:Name="AddBookButton" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>