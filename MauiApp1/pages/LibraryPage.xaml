<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.pages.LibraryPage"
             Title="LibraryPage">


    <VerticalStackLayout Padding="20" VerticalOptions="FillAndExpand">


        <Button Text="+" 
            FontSize="30" 
            HorizontalOptions="Center" 
            VerticalOptions="EndAndExpand" 
            Clicked="OnAddBookClicked"/>
        <ScrollView VerticalScrollBarVisibility="Always" HeightRequest="500">
            <StackLayout x:Name="BookStack" Padding="10" Spacing="10" VerticalOptions="Start">
                <!-- Книги -->
            </StackLayout>
        </ScrollView>

        
    </VerticalStackLayout>
</ContentPage>