<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.pages.SignUpPage"
             Title="">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Регистрация" FontSize="Large" HorizontalOptions="Center" />
        <Entry Text="{Binding Username}" Placeholder="Имя" />
        <Entry Text="{Binding Email}" Placeholder="Email" />
        <Entry Text="{Binding Password}" Placeholder="Пароль" IsPassword="True" />
        <Button Command="{Binding SignUpCommand}" Text="Зарегистрироваться" HorizontalOptions="Fill" />
        <Button Command="{Binding NavigateSignInCommand}" Text="Уже есть аккаунт? Войдите"  HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>