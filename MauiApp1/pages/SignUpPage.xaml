<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.pages.SignUpPage"
             Title="SignUpPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Create an Account" FontSize="Large" HorizontalOptions="Center" />

        <Entry Placeholder="Email" />
        <Entry Placeholder="Password" IsPassword="True" />
        <Button Text="Sign Up" Clicked="OnSignUpClicked" HorizontalOptions="Fill" />

        <Button Text="Back to Login" Clicked="OnBackClicked" HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>